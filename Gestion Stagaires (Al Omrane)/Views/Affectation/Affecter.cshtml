                @Html.DropDownList("S_Service", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.S_Service, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
